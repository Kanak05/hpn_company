{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "vercel-build.sh", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles" 
      }
    },
    {
      "src": "ca_website/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ca_website/wsgi.py"
    }
  ]
}